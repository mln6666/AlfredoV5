@model IEnumerable<MinimercadoAlfredo.Models.Category>
@{
    ViewBag.Title = "Rubros";
}

<head>
    <link href="/Content/Site.css" rel="stylesheet">
</head>

@if (TempData["message"] != null)
{
    <input id="message" style="display: none" value="@TempData["message"]" />
}

<h2 class="text-center">Lista de Rubros</h2>
<hr style="color:grey;border-color:grey" />
<div>
    <a href="@Url.Action("Create", "Categories")" class="btn btn-success dialog-window2 chicle">Agregar Rubro</a>
</div>
<br />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <th style="width:150px">
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                Descripción
            </th>
            <th class="text-center" style="width:100px">
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td width="700px">
                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit","Categories", new { id = item.IdCategory })" class="btn btn-primary btn-sm dialog-window3"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete","Categories", new { id = item.IdCategory })" class="btn btn-primary btn-sm dialog-window1"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Categories", new { id = item.IdCategory })" class="dialog-window3">Editar</a></li>
                            <li><a href="@Url.Action("Delete","Categories", new { id = item.IdCategory })" class="dialog-window1">Eliminar</a></li>
                        </ul>
                    </div>*@
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="myModal1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Eliminar Rubro</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Nuevo Rubro</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="myModal3" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Editar Rubro</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        $('#myModal').modal('show')

        $(document).ready(function () {
            if ($('#message').val() == 1) {
                toastr.success("El Rubro ha sido eliminado exitosamente.");
            } else {
                if ($('#message').val() == 2) {
                    toastr.success("El Rubro ha sido modificado exitosamente.");
                }
            }

            $('.dropdown-toggle').dropdown();

        ////Grilla automatica//
        $("#tabla").DataTable({
            "language": {
                "url": "/Scripts/DataTables/spanish.json"
            }
        });

        //$("#myModal").modal('show');

        $("body").on("click", "a.dialog-window1", null, function (e) {
            e.preventDefault();

            var $link = $(this); // Reference to <a/> link
            var title = $link.text(); //this is title to fetch in htnl
            $('#myModal1.modal-title').html(title);

            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#myModal1').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#myModal1 .te').html(data);
                    $('#myModal1').modal();
                }).success(function () { $('input:text:visible:first').focus(); });
            }
        });

