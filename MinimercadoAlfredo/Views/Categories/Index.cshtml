@model IEnumerable<MinimercadoAlfredo.Models.Category>

@{
    ViewBag.Title = "Index";
}
<h2 class="text-center">Lista de Rubros</h2>
<hr style="color:grey;border-color:grey" />
<div>
    <a href="@Url.Action("Create", "Categories")" class="btn btn-success dialog-window2">Agregar Rubro</a>
</div>
<br />
<table class="table table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:white; background-color:#4d77a3">
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                Descripción
            </th>
            <th class="text-center">
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td width="700px">
                    @Html.DisplayFor(modelItem => item.CategoryDescription)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdCategory }, new { @class = "dialog-window3 btn btn-primary btn-sm" })
                    @*@Html.ActionLink("Detalles", "Details", new { id = item.IdCategory }, new { @class = "btn btn-primary btn-sm" })*@
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCategory }, new { @class = "dialog-window1 btn btn-primary btn-sm" })
                </td>
            </tr>
        }
    </tbody>

</table>

<div class="modal fade" id="myModal1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Eliminar Rubro</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Nuevo Rubro</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal3" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Editar Rubro</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>


