@model MinimercadoAlfredo.Models.Category

@{
    Layout = null;
}

<head>
    <script>
        $('#crearrubro').submit(function (e) {
            var guardar = this;
            e.preventDefault();
            var categoryname = true;

            if ($('#CategoryName').val().trim() == '') {
                categoryname = false;

                $('#spancategoryname').text("Campo requerido")
            }

            if (categoryname) {
                $('#spancategoryname').text("");
                guardar.submit();
            }

        })
    </script>
</head>


@using (Html.BeginForm("Create", "Categories", null, FormMethod.Post, new { id = "crearrubro" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                <span id="spancategoryname" style="color:red"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryDescription, "Descripción", htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.CategoryDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryDescription, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />

        <div class="form-actions no-color text-center">
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>

}


