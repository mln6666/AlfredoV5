@model IEnumerable<MinimercadoAlfredo.Models.Provider>

@{
    ViewBag.Title = "Proveedores";
}

<h2 class="text-center">Lista de Proveedores</h2>
<hr style="color:grey;border-color:grey" />

<div>
    <a href="@Url.Action("Create", "Providers")" class="btn btn-success chicle">Agregar Proveedor</a>
</div>
<br />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:white; background-color:#4d77a3">
            <th>
                @Html.DisplayNameFor(model => model.ProviderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProviderPhone)
            </th>

            <th class="text-center" style="width:150px">Opciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProviderPhone)
                </td>

                <td class="text-center">
                    <a href="@Url.Action("Edit","Providers", new { id = item.IdProvider })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Details","Providers", new { id = item.IdProvider })" class="btn btn-primary btn-sm dialog-window2"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete","Providers", new { id = item.IdProvider })" class="btn btn-primary btn-sm dialog-window1"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;<span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Providers", new { id = item.IdProvider })">Editar</a></li>
                            <li><a href="@Url.Action("Details","Providers", new { id = item.IdProvider })" class="dialog-window2">Detalles</a></li>
                            <li><a href="@Url.Action("Delete","Providers", new { id = item.IdProvider })" class="dialog-window1">Eliminar</a></li>
                        </ul>
                    </div>*@
                </td>
            </tr>
        }
    </tbody>

</table>

@if (ViewBag.message != null)
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mensaje de Aviso</h4>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.message</p>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="myModal1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Eliminar Proveedor</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="myModal2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Detalles de Proveedor</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>



@section scripts
{
    <script>
        $('#myModal').modal('show')

        $(document).ready(function () {

            ////Grilla automatica//
            $("#tabla").DataTable({
                "language": { "url": "/Scripts/DataTables/spanish.json" }
            });

            $('.dropdown-toggle').dropdown();
        })

        $("body").on("click", "a.dialog-window1", null, function (e) {
            e.preventDefault();

            var $link = $(this); // Reference to <a/> link
            var title = $link.text(); //this is title to fetch in htnl
            $('#myModal1.modal-title').html(title);

            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#myModal1').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#myModal1 .te').html(data);
                    $('#myModal1').modal();
                }).success(function () { $('input:text:visible:first').focus(); });
            }
        });

        $("body").on("click", "a.dialog-window2", null, function (e) {
            e.preventDefault();

            var $link = $(this); // Reference to <a/> link
            var title = $link.text(); //this is title to fetch in htnl
            $('#myModal2.modal-title').html(title);

            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#myModal2').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#myModal2 .te').html(data);
                    $('#myModal2').modal();
                }).success(function () { $('input:text:visible:first').focus(); });
            }
        });
    </script>
}