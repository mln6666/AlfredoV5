@model IEnumerable<MinimercadoAlfredo.Models.Purchase>

@{
    ViewBag.Title = "Compras";
}

<h2 class="text-center">Lista de Compras</h2>
<hr style="color:grey;border-color:grey" />

<div>
    <a href="@Url.Action("CreatePurchase", "Purchases")" class="btn btn-success chicle">Nueva Compra</a>
</div>
<br />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <th>
                Fecha de Compra
            </th>
            <th>
                Proveedor
            </th>          
            <th>
                Total Comprado
            </th>
            <th class="text-center" style="width:120px">
                Opciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseDate)
                </td>
                <td width="250px">
                    @Html.DisplayFor(modelItem => item.Provider.ProviderName)
                </td>                
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseTotal)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Edit","Purchases", new { id = item.IdPurchase })" class="btn btn-primary btn-sm disabled"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Details","Purchases", new { id = item.IdPurchase })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete","Purchases", new { id = item.IdPurchase })" class="btn btn-primary btn-sm dialog-window1"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;<span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Purchases", new { id = item.IdPurchase })">Editar</a></li>
                            <li><a href="@Url.Action("Details","Purchases", new { id = item.IdPurchase })">Detalles</a></li>
                            <li><a href="@Url.Action("Delete","Purchases", new { id = item.IdPurchase })" class="dialog-window1">Eliminar</a></li>
                        </ul>
                    </div>*@                     
                </td>
            </tr>
        }
    </tbody>

</table>

@if (ViewBag.message != null)
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mensaje de Aviso</h4>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.message</p>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

@section scripts
{
    <script>
        $('#myModal').modal('show')

        $(document).ready(function () {

            ////Grilla automatica//
            $("#tabla").DataTable({
                "language": { "url": "/Scripts/DataTables/spanish.json" }
            }, {
                order: [[0, "desc"]]
            });

            //$("#tabla").DataTable({
            //        "order": [[0, "desc"]]
            //    });
            
            $('.dropdown-toggle').dropdown();
            
        })
    </script>    
}
