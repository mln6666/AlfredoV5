@model IEnumerable<MinimercadoAlfredo.Models.Product>

@{
    ViewBag.Title = "Productos Desactivados";
}

<h2 class="text-center">Lista de Productos Desactivados</h2>
<hr style="color:grey;border-color:grey" />

<div class="row">
    <div class="col-lg-10"></div>
    <div class="btn-group col-lg-1">
        <button type="button" class="btn btn-primary dropdown-toggle"
                data-toggle="dropdown">
            Mostrar <span class="caret"></span>
        </button>

        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("Index","Products")">Productos Activos</a></li>
            <li><a href="@Url.Action("Minimum","Products")">Productos con Stock mínimo</a></li>
            <li><a href="@Url.Action("OffProducts","Products")">Productos Desactivados</a></li>
            <li><a href="@Url.Action("Record","Products")">Todos los Productos</a></li>
        </ul>
    </div>
</div>
<br />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trademark)
            </th>
            <th>
                Nro Artículo
            </th>
            <th>
                Costo
            </th>            

            <th class="text-center">
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trademark)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>                

                <td class="text-center">
                    <a href="@Url.Action("Edit","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Details","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm dialog-window3"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Deactivate","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm dialog-window2"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Delete","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm dialog-window1"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;<span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Products", new { id = item.IdProduct })">Editar</a></li>
                            <li><a href="@Url.Action("Details","Products", new { id = item.IdProduct })">Detalles</a></li>
                            <li><a href="@Url.Action("Deactivate","Products", new { id = item.IdProduct })" class="dialog-window2">Activar</a></li>
                            <li><a href="@Url.Action("Delete","Products", new { id = item.IdProduct })" class="dialog-window1">Eliminar</a></li>
                        </ul>
                    </div>*@
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.message != null)
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mensaje de Aviso</h4>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.message</p>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="myModal1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
