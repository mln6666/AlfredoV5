            $('#myModal3.modal-title').html(title);

            var url = $(this).attr('href');
            if (url.indexOf('#') == 0) {
                $('#myModal3').modal('show');
            }
            else {
                $.get(url, function (data) {
                    $('#myModal3 .te').html(data);
                    $('#myModal3').modal();
                }).success(function () { $('input:text:visible:first').focus(); });
            }
        });

        $('.dropdown-toggle').dropdown();
    })
    </script>
}
