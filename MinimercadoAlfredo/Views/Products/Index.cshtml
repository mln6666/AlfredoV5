@model IEnumerable<MinimercadoAlfredo.Models.Product>

@{
    ViewBag.Title = "Productos Activos";
}

@if (TempData["message"] != null)
{
    {
        <input id="message" style="display: none" value="@TempData["message"]" />

    }

}

@if (TempData["deactivate"] != null)
{
    {
        <input id="deactivate" style="display: none" value="@TempData["deactivate"]" />

    }

}

<h2 class="text-center">Lista de Productos Activos</h2>
<hr style="color:grey;border-color:grey" />


<div class="row">
    <div class="col-lg-10">
        <a href="@Url.Action("Create", "Products")" class="btn btn-success chicle">Agregar Producto</a>
    </div>    
    <div class="btn-group col-lg-1">
        <button type="button" class="btn btn-primary dropdown-toggle"
                data-toggle="dropdown">
            Mostrar <span class="caret"></span>
        </button>

        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("Index","Products")">Productos Activos</a></li>
            <li><a href="@Url.Action("Minimum","Products")">Productos con Stock mínimo</a></li>
            <li><a href="@Url.Action("OffProducts","Products")">Productos Desactivados</a></li>
            <li><a href="@Url.Action("Record","Products")">Todos los Productos</a></li>            
        </ul>
    </div>
</div>
<br />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Trademark.TrademarkName)
            </th>
            <th style="width:100px">
                Nro Artículo
            </th>
            <th style="width:70px">
                Stock
            </th>
            

            <th class="text-center" style="width:130px">
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.Stock >= item.Minimum | item.Minimum == null)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                   
                        <td>
                            @Html.DisplayFor(modelItem => item.Trademark.TrademarkName)
                        </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.IdProduct)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParcialStock)
                    </td>
                    
                }
                else
                {
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.Category.CategoryName)
                    </td>
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.ProductDescription)
                    </td>
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.Trademark.TrademarkName)
                    </td>
                    <td style="color:red">
                        @Html.DisplayFor(modelItem => item.IdProduct)
                    </td>
                    <td style="color: red">
                        @Html.DisplayFor(modelItem => item.ParcialStock)
                    </td>
                        
                }
                <td class="text-center">
                    <a href="@Url.Action("Edit","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Details","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm dialog-window2"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a href="@Url.Action("Deactivate","Products", new { id = item.IdProduct })" class="btn btn-primary btn-sm dialog-window1"><span class="glyphicon glyphicon-ban-circle" aria-hidden="true"></span></a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;<span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Products", new { id = item.IdProduct })">Editar</a></li>
                            <li><a href="@Url.Action("Details","Products", new { id = item.IdProduct })">Detalles</a></li>
                            <li><a href="@Url.Action("Deactivate","Products", new { id = item.IdProduct })" class="dialog-window1">Desactivar</a></li>
                        </ul>
                    </div>*@                    
                </td>
            </tr>
        }
    </tbody>
</table>

<text class="text-danger">**Los Productos en color rojo tienen Stock por debajo de la mínima</text>

@if (ViewBag.message != null)
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mensaje de Aviso</h4>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.message</p>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal fade" id="myModal1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Desactivar Producto</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>            
        </div>
    </div>
</div>

<div class="modal fade" id="myModal2" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Detalle de Producto</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>
        $('#myModal').modal('show')

        $(document).ready(function() {

            if ($('#message').val() == 1)
                toastr.success("Producto agregado correctamente.");

            if ($('#deactivate').val() == 2)
                toastr.success("Producto desactivado correctamente.");
            


            ////Grilla automatica//
            $("#tabla").DataTable({
                "language": {
                    "url": "/Scripts/DataTables/spanish.json"
                }
            });

            $("body").on("click", "a.dialog-window1", null, function(e) {
                e.preventDefault();

                var $link = $(this); // Reference to <a/> link
                var title = $link.text(); //this is title to fetch in htnl
                $('#myModal1.modal-title').html(title);

                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#myModal1').modal('show');
                } else {
                    $.get(url, function(data) {
                        $('#myModal1 .te').html(data);
                        $('#myModal1').modal();
                    }).success(function() { $('input:text:visible:first').focus(); });
                }
            });

            $("body").on("click", "a.dialog-window2", null, function(e) {
                e.preventDefault();

                var $link = $(this); // Reference to <a/> link
                var title = $link.text(); //this is title to fetch in htnl
                $('#myModal2.modal-title').html(title);

                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#myModal2').modal('show');
                } else {
                    $.get(url, function(data) {
                        $('#myModal2 .te').html(data);
                        $('#myModal2').modal();
                    }).success(function() { $('input:text:visible:first').focus(); });
                }
            });

            $('.dropdown-toggle').dropdown();
        })
    </script>
}
