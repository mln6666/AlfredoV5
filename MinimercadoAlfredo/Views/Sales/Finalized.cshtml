
@model IEnumerable<MinimercadoAlfredo.Models.Sale>

@{
    ViewBag.Title = "Finalized";
}

<h2 class="text-center">Lista de Ventas Finalizadas</h2>
<hr style="color:grey;border-color:grey" />


<div class="row">
    <div class="col-lg-10">
        <a href="@Url.Action("CreateSale", "Sales")" class="btn btn-success">Agregar Venta</a>
    </div>
    <div class="btn-group col-lg-1">
        <button type="button" class="btn btn-primary dropdown-toggle"
                data-toggle="dropdown">
            Mostrar <span class="caret"></span>
        </button>

        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("Index","Sales")">Todas</a></li>
            <li><a href="@Url.Action("Pending","Sales")">Pendientes</a></li>
            <li><a href="@Url.Action("Finalized","Sales")">Finalizadas</a></li>
        </ul>
    </div>
</div>
<br />
<table class="table table-striped table-bordered" id="tabla">
    <thead>
    <tr class="text-center" style="color: white; background-color: #4d77a3">
        <th>
            Nº Venta
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SaleState)
        </th>
        <th class="text-center">
            Acciones
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleDate)
                </td>
                <td width="350px">
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td width="100px">
                    @Html.DisplayFor(modelItem => item.SaleTotal)
                </td>
                <td width="100px">
                    @Html.DisplayFor(modelItem => item.SaleState)
                </td>
                <td class="text-center">
                    @Html.ActionLink("Editar", "Edit", new {id = item.IdSale}, new {@class = "btn btn-primary btn-sm"})
                    @Html.ActionLink("Detalles", "Details", new {id = item.IdSale}, new {@class = "btn btn-primary btn-sm"})
                    @Html.ActionLink("Eliminar", "Delete", new {id = item.IdSale}, new {@class = "btn btn-primary btn-sm"})
                </td>
            </tr>
        }
    </tbody>
</table>


