
@model IEnumerable<MinimercadoAlfredo.Models.Sale>

@{
    ViewBag.Title = "Ventas Finalizadas";
}
@if (TempData["message"] != null)
{
    <input id="message" style="display: none" value="@TempData["message"]" />
}

<h2 class="text-center">Lista de Ventas Finalizadas</h2>
<hr style="color:grey;border-color:grey" />

<div class="row">
    <div class="col-lg-10">
        <a href="@Url.Action("CreateSale", "Sales")" class="btn btn-success">Agregar Venta</a>
    </div>
    <div class="btn-group col-lg-1">
        <button type="button" class="btn btn-primary dropdown-toggle"
                data-toggle="dropdown">
            Mostrar <span class="caret"></span>
        </button>

        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Action("Index","Sales")">Todas</a></li>
            <li><a href="@Url.Action("Pending","Sales")">Pendientes</a></li>
            <li><a href="#">Finalizadas</a></li>
        </ul>
    </div>
</div>
<br />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
    <tr class="text-center" style="color: white; background-color: #4d77a3">
        <th style="width: 10%">
            Nº Venta
        </th>
        <th style="width: 14%">
            @Html.DisplayNameFor(model => model.SaleDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </th>
        <th class="text-center" style="width: 13%">
            @Html.DisplayNameFor(model => model.SaleTotal)
        </th>
        <th style="width: 12%">
            Estado
        </th>
        <th class="text-center" style="width:120px">
            Opciones
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdSale)
                </td>
                <td>
                    <div class="hidden">@Html.DisplayFor(modelItem => item.SaleDate)</div>
                    <div>
                        @Html.DisplayFor(modelItem => item.SaleDate.Day)/@Html.DisplayFor(modelItem => item.SaleDate.Month)/@Html.DisplayFor(modelItem => item.SaleDate.Year)
                    </div>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.CustomerName)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.SaleTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SaleState)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("Details","Sales", new { id = item.IdSale })" class="btn btn-primary btn-sm" title="Detalles"><span class="glyphicon glyphicon-list" aria-hidden="true"></span></a>
                    <a class="btn btn-primary btn-sm" title="Editar" onclick="finalized()"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a class="btn btn-danger btn-sm" title="Eliminar" onclick="deleted()"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    @*<div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown"><span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp; <span class="caret"></span>
                        </button>

                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Sales", new { id = item.IdSale })">Editar</a></li>
                            <li><a href="@Url.Action("Details","Sales", new { id = item.IdSale })">Detalles</a></li>
                            <li><a href="@Url.Action("Delete","Sales", new { id = item.IdSale })" class="dialog-window">Eliminar</a></li>
                        </ul>
                    </div>*@
                </td>
            </tr>
        }
    </tbody>
</table>


@section scripts
{
    <script>

        $(document).ready(function() {

            ////Grilla automatica//
            $("#tabla").DataTable({
                order: [[0, "desc"]],
                "lengthMenu": [[50, 100, 150, 200], [50, 100, 150, 200]],
                "language": { "url": "/Scripts/DataTables/spanish.json" }
            });
            $('.dropdown-toggle').dropdown();

    });

        function finalized() {
            bootbox.alert({
                title: "Editar Venta",
                message: "Acción denegada. Solo es posible modificar ventas pendientes",
                buttons: {
                    ok: {
                        label: 'Aceptar',
                        className: 'btn-primary'
                    }
                }
            });
        }

        function deleted() {
            bootbox.alert({
                title: "Eliminar Venta",
                message: "Acción denegada. Solo es posible eliminar ventas pendientes",
                buttons: {
                    ok: {
                        label: 'Aceptar',
                        className: 'btn-primary'
                    }
                }
            });
        }
    </script>
}


