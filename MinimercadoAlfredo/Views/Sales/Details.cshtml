@using MinimercadoAlfredo.Models
@model MinimercadoAlfredo.Models.Sale

@{
    ViewBag.Title = "Detalles de Venta";
}
<h3 class="text-center hidden-print">Detalles de Venta</h3>
<hr style="color:grey;border-color:grey" />

<table class="table table-condensed   table-striped table-bordered">
    <thead>
        <tr class="text-center" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <th style="width:110px">
                N° Venta
            </th>
            <th>
                Cliente
            </th>
            <th>
                Dirección
            </th>
            <th class="hidden-print" style="width:220px">
                Estado de Venta
            </th>
            <th style="width:170px">
                @Html.DisplayNameFor(model => model.SaleDate)
            </th>

        </tr>
    </thead>
    <tbody>
        <tr style="background-color: white">
            <td>
                @Html.DisplayFor(model => model.IdSale)
            </td>

            <td>
                @Html.ActionLink((string)Model.Customer.CustomerName, "modalCustomer", new { id = Model.IdCustomer }, new { @class = "dialog-window" })
                @*@Html.DisplayFor(model => model.Provider.ProviderName)*@
            </td>
            <td>
                @if (Model.SaleAddress == "" | Model.SaleAddress == null)
            {<text>-</text>}
            else
            {
                    @Html.DisplayFor(model => model.SaleAddress)}
            </td>

            <td class="hidden-print">
                @Html.DisplayFor(model => model.SaleState)
            </td>
            <td>
                @Html.DisplayFor(model => model.SaleDate)
            </td>

        </tr>
    </tbody>
</table>
<h3 class="text-center hidden-print">Lista de Productos</h3>
<hr style="color:grey;border-color:grey" />
<table class="table table-condensed   table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <td class="text-left" style="border-radius: 3px;font-weight: bold; width:120px">
                N° Art.
            </td>
            <td class="text-left" style="border-radius: 3px;font-weight: bold">
                Producto
            </td>            
                
            <td class="text-left" style="border-radius: 3px;font-weight: bold; width:100px">
                Cant.
            </td>
            <td class="text-left" style="border-radius: 3px;font-weight: bold; width:100px">
                Desc.
            </td>
            <td class="text-left" style="border-radius: 3px;font-weight: bold; width:100px">
                Precio M
            </td>
            <td class="text-left" style="border-radius: 3px;font-weight: bold; width:100px">
                Subtotal(+)
            </td>
            <td class="text-left hidden-print" style="border-radius: 3px;font-weight: bold; width:100px">
                Dev.
            </td>
            <td class="text-left hidden-print" style="border-radius: 3px;font-weight: bold; width:130px">
                Subtotal Dev(-)
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SaleLines)
        {
            <tr style="background-color: white">
                <td>
                    @Html.DisplayFor(modelItem => item.Product.ProductNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.Trademark) - @Html.DisplayFor(modelItem => item.Product.ProductDescription)
                </td>
                
                    
                <td>
                    @Html.DisplayFor(modelItem => item.LineQuantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LineDiscount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LinePrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LineTotal)
                </td>
                <td class="hidden-print">
                    @if (item.Return == 0 | item.Return == null)
                    {<text>-</text>}
                    else
                    { @Html.DisplayFor(modelItem => item.Return) }

                </td>
                <td class="hidden-print">
                    @if (item.LineTotalReturn == 0 | item.LineTotalReturn == null)
                {<text>-</text>}
                else
                {
                        @Html.DisplayFor(modelItem => item.LineTotalReturn)}
                </td>
            </tr>
        }
        <tr style="background:none">
            <td style="border-right:hidden;border-left:hidden;border-bottom:hidden;"></td>
            <td style="border-right:hidden;border-left:hidden;border-bottom:hidden;"></td>
            <td style="border-right:hidden;border-left:hidden;border-bottom:hidden;"></td>
            <td style="border-right:hidden;border-left:hidden;border-bottom:hidden;"></td>
            <td style="border-left:hidden;border-bottom:hidden;"></td>
            <td style="color:black; font-weight: bolder; background-color:lightgray">
                @Html.DisplayFor(model => model.LinesTotal)
            </td>
            <td class="hidden-print" style="border-bottom:hidden;"></td>
            <td class="hidden-print" style="color:black; font-weight: bolder; background-color:lightgray">
                @if (Model.ReturnsTotal == 0 | Model.ReturnsTotal == null)
                {<text>-</text>}
                else
                { @Html.DisplayFor(model => model.ReturnsTotal)}
            </td>
        </tr>
    </tbody>
</table>
<hr style="color:grey;border-color:grey" />

<table class="table table-condensed   table-striped table-bordered">
    <thead>
        <tr class="text-right" style="color:black;font-weight: bold; background-color:lightsteelblue">
            <td class="text-left" style="border-radius: 3px;font-weight: bold">
                Observaciones
            </td>
            <td class="text-left" style="border-radius: 3px; width:200px;font-weight: bold">
                Total
            </td>
        </tr>
    </thead>
    <tbody>
        <tr style="background-color: white">
            <td>
                @if (Model.Comments == "" | Model.Comments == null)
            {<text>-</text>}
            else
            {
                    @Html.DisplayFor(model => model.Comments)}
            </td>
            <td>@Html.DisplayFor(model => model.SaleTotal)</td>
        </tr>
    </tbody>
</table>

<div class="text-center hidden-print">
    <a href="@Url.Action("Index", "Sales")" class="btn btn-primary"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> &nbsp; Volver</a>
    @if (Model.SaleState == SaleState.Pendiente)
    {
        <a href="@Url.Action("Edit","Sales", new { id = Model.IdSale })" class="btn btn-success">Editar &nbsp; <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
        @*<a class="btn btn-warning hidden-print" data-toggle="modal" data-target="#GSCCModal">
            Comprobante
        </a>*@
    }
    else
    {<a class="btn btn-success disabled">Editar &nbsp; <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> }
    <a href="@Url.Action("Details", "Bills", new { id = Model.IdSale })" class="btn btn-success dialog-window2 chicle">Ver Comprobante</a>


</div>


