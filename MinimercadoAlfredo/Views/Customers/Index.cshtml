@model IEnumerable<MinimercadoAlfredo.Models.Customer>
@{
    ViewBag.Title = "Clientes";
}
<head>
    <link href="/Content/Site.css" rel="stylesheet">
</head>

<h2 class="text-center">Lista de Clientes</h2>
<hr style="color:grey;border-color:grey" />

<div>
    <a href="@Url.Action("Create", "Customers")" class="btn btn-success chicle">Agregar Cliente</a>
</div>
<br />
<table class="table table-striped table-bordered" id="tabla">
    <thead>
        <tr class="text-center" style="color:white; background-color:#4d77a3">
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerPhone)
            </th>
            <th>
                Email
            </th>
            <th style="width:90px">
                Cuit / Cuil
            </th>
            <th class="text-center" style="width:120px">
                Opciones
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CuitCuil)
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary btn-sm dropdown-toggle"
                                data-toggle="dropdown">
                            <span class="glyphicon glyphicon-list" aria-hidden="true"></span>&nbsp;<span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Edit","Customers", new { id = item.IdCustomer })">Editar</a></li>
                            @*<li><a href="@Url.Action("Details","Customers", new { id = item.IdCustomer })">Detalles</a></li>*@
                            <li><a href="@Url.Action("Delete","Customers", new { id = item.IdCustomer })" class="dialog-window1">Eliminar</a></li>
                        </ul>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.message != null)
{
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Mensaje de Aviso</h4>
                </div>
                <div class="modal-body">
                    <p>@ViewBag.message</p>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal fade" id="myModal1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title text-center">Eliminar Cliente</h4>
            </div>
            <div class="modal-body">
                <div class="te">Espere...</div>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.errorcustomer != null)
{
    <div id="myModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h2 class="modal-title text-center">Aviso</h2>
                </div>
                <div class="modal-body">
                    <h3 class="text-center" style="color: Red">@ViewBag.errorcustomer</h3>
                </div>
                <div class="modal-footer text-center">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
}
@section scripts
{
    <script>
        $('#myModal').modal('show')

        $(document).ready(function () {

            $('.dropdown-toggle').dropdown();

            ////Grilla automatica//
            $("#tabla").DataTable({
                "language": {
                    "url": "/Scripts/DataTables/spanish.json"
                }
            });

            $("body").on("click", "a.dialog-window1", null, function (e) {
                e.preventDefault();

                var $link = $(this); // Reference to <a/> link
                var title = $link.text(); //this is title to fetch in htnl
                $('#myModal1.modal-title').html(title);

                var url = $(this).attr('href');
                if (url.indexOf('#') == 0) {
                    $('#myModal1').modal('show');
                }
                else {
                    $.get(url, function (data) {
                        $('#myModal1 .te').html(data);
                        $('#myModal1').modal();
                    }).success(function () { $('input:text:visible:first').focus(); });
                }
            });

        })
    </script>

}
