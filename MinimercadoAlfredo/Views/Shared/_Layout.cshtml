                        <a style="font-weight: bold" class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Listas de Productos<span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">

                            <li>@Html.ActionLink("Lista de Productos Activos", "Index", "Products")</li>
                            <li>@Html.ActionLink("Lista de Productos Desactivados", "OffProducts", "Products")</li>                            
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Lista de todos los Productos", "Record", "Products")</li>

                        </ul>
                    </li>*@
                    <li>@Html.ActionLink("Compras", "Index", "Purchases")</li>
                    <li>@Html.ActionLink("Ventas", "Index", "Sales")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Customers")</li>
                    <li>@Html.ActionLink("Proveedores", "Index", "Providers")</li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="text-center"> - Sistema Minimercado Alfredo &copy; @DateTime.Now.Year - Godesa Solutions ®  <a style="color:black ">@Html.ActionLink("Contacto", "Contact", "Home")</></a> - </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")    
    @RenderSection("scripts", required: false)
</body>
</html>
