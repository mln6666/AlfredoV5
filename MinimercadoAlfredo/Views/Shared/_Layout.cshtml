                                <li style="font-weight: bold;font-style: italic;text-transform: capitalize!important"><a href="@Url.Action("Catalog", "Products", new {personal = false})">Clientes</a></li>
                            </ul>
                        </li>
                        <li class="divider"></li>
                        <li style="text-transform: uppercase">@Html.ActionLink("Rubros", "Index", "Categories")</li>
                        <li class="divider"></li>
                        <li style="text-transform: uppercase">@Html.ActionLink("Marcas", "Index", "Trademarks")</li>
                        <li class="divider"></li>
                        <li class="dropdown-submenu">
                            <a tabindex="-1" href="#" @*onclick="event.stopPropagation()"*@ style="text-transform: uppercase">Actualización de Stock</a>
                            <ul class="dropdown-menu">
                                <li style="font-weight: bold;font-style: italic;text-transform: capitalize!important">@Html.ActionLink("Alta Stock", "AddStock", "Products")</li>
                                <li class="divider"></li>
                                <li style="font-weight: bold;font-style: italic;text-transform: capitalize!important">@Html.ActionLink("Baja Stock", "RemoveStock", "Products")</li>
                            </ul>
                        </li>
                        <li class="divider"></li>
                        <li style="font-weight: bold;text-transform: uppercase">@Html.ActionLink("Actualización de Precios", "PriceUpdate", "Products")</li>

                    </ul>
                </li>

                <li style="text-transform: uppercase">@Html.ActionLink("Clientes", "Index", "Customers")</li>

                <li style="text-transform: uppercase">@Html.ActionLink("Proveedores", "Index", "Providers")</li>
            </ul>
          
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</nav>
<div class="container body-content">

    @RenderBody()
    <hr class="hidden-print"/>
    @Scripts.Render("~/js")
    <footer>
        <p class="text-center hidden-print"> - Sistema Minimercado Alfredo &copy; @DateTime.Now.Year - Godesa Solutions ® <a class="hidden-print" style="color: black">@Html.ActionLink("Contacto", "Contact", "Home")</></a> -
        </p>
    </footer>
</div>
    @*@Scripts.Render("~/bundles/lib")*@
    @RenderSection("scripts", required: false)
