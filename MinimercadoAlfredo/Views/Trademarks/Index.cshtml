@model IEnumerable<MinimercadoAlfredo.Models.Trademark>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Lista de Marcas</h2>
<hr style="color:grey;border-color:grey" />

<div>
    <a href="@Url.Action("Create", "Trademarks")" class="btn btn-success">Agregar Marca</a>
</div>
<br/>
<table id="tabla" class="table table-condensed   table-striped table-bordered">
    <thead>
    <tr class="text-center" style="color: black; font-weight: bold; background-color: lightsteelblue">
        <th style="width: 25%">
            @Html.DisplayNameFor(model => model.TrademarkName)
        </th>
        <th>
            Descripción
        </th>
        <th class="text-center" style="width: 10%">
            Opciones
        </th>
    </tr>
    </thead>

    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TrademarkName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrademarkDescription)
            </td>
            <td class="text-center">
                <a href="@Url.Action("Edit", "Trademarks", new {id = item.IdTrademark})" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="@Url.Action("Delete", "Trademarks", new {id = item.IdTrademark})" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

            </td>
        </tr>
    }
    </tbody>

</table>

@section Scripts{
    <script>
        $(document).ready(function() {
            $("#tabla").DataTable({
                "language": {
                    "url": "/Scripts/DataTables/spanish.json"
                }

            });
        })
    </script>
}
